{% extends 'base_with_navbar.html.twig' %}

{% block title %}MMG Calendar - Reinitialisation du mot de passe
{% endblock %}
{% block stylesheets %}

	<link rel="stylesheet" type="text/css" href="{{asset('css/resetPassword.css')}}">
{% endblock %}
{% block body %}
	<div class="container bg-main">
		<div class="mx-auto ">
			{% for flashError in app.flashes('reset_password_error') %}
				<div class="alert alert-danger" role="alert">{{ flashError }}</div>
			{% endfor %}

			<h1>Reinitialisation du mot de passe</h1>

			{{ form_start(requestForm) }}
			{{ form_row(requestForm.email, {'label':'Adresse E-mail','attr': {'placeholder': 'Votre adresse E-mail ...', 'class': 'form-control mb-3'}})}}
			<div>
				{{form_label(requestForm.captcha)}}
			</div>
			<span class="erreur">{{ form_errors(requestForm.captcha) }}</span>
			{{form_widget(requestForm.captcha)}}
			<div>
				<small>
					Entrer votre adresse e-mail et vous recevrez par mail, un lien pour reinitialiser votre mot de passe
				</small>
			</div>

			<button class="btn btn-primary">Recevoir un lien de reinitialisation de mot de passe</button>
			{{ form_end(requestForm) }}
		</div>
	</div>
{% endblock %}
