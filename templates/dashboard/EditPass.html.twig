{% extends 'base_with_navbar.html.twig' %}

{% block title %}MMG Calendar - Modification de votre mot de passe
{% endblock %}
{% block stylesheets %}
	<link rel="stylesheet" type="text/css" href="{{asset('css/dashboard.css')}}">
	
{% endblock %}
{% block javascripts %}<script defer src="{{asset('js/mdp.js')}}"></script>{% endblock %}
{% block body %}
	<main>
		<div class="container">
			<div class="col-4 mx-auto ">
				<div class='bg-div p-3 rounded'>
					<h4 class="text-decoration-underline mb-3">Modification de votre mot de passe</h4>
					{{form_start(formEditPass)}}
					{{form_label(formEditPass.password.first)}}
					{{form_widget(formEditPass.password.first)}}
					<span class="erreur">{{ form_errors(formEditPass.password.first) }}</span>
					<span id="message"></span>
					{{form_row(formEditPass.password.second)}}
					<span id="message2"></span>
					{{form_row(formEditPass.buttonValidate)}}
					{{form_end(formEditPass)}}
				</div>
			</div>
		</div>

	</main>
{% endblock %}
